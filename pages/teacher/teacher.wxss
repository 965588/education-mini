.nav-son{
  width: 100%;
  padding:0 16px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e7e7e7;
}
.nav-son_l{
  width: 70px;
  height: 50px;
  font-size: 14px;
  color: #656565;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content{
  width: 100%;
}
.content_l{
  width: 93px;
  border-right: 1px solid #e7e7e7;
  float: left;
}
.class{
  width: 100%;
  height: 43px;
  text-align: center;
  line-height: 43px;
  font-size: 14px;
  color:#656565; 
}
.class:hover{
  color: #61BD3B;
}
.content_r{
  width: 280px;
  padding: 0 20px 0 10px;
  box-sizing: border-box;
  float: left;
}
.content_r>view{
  margin-top: 20px;
  text-align: center;
  line-height: 28px;
  height: 28px; 
  width: 25%;
  float: left;
  font-size: 12px;
  color: #656565;
  border: 1px solid #e7e7e7;
  margin-left: 18px;
}
.class_deta{
  width: 100%;
  height: 43px;
  display: flex;
  justify-content: space-between;
}
.class_deta_l{
  width: 68px;
  height: 28px;
  border: 1px solid #e7e7e7;
  font-size: 12px;
}
